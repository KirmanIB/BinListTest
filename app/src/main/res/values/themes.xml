<resources >
    <!-- Base application theme. -->
    <style name="Theme.BinList" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/status_bar</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.BinList.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="backgroundColor">@color/status_bar</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BinList.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BinList.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>